{
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "incremental": true,
    "target": "ES2021",
    "declaration": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ]
}
